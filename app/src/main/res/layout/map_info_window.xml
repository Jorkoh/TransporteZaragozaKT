<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minWidth="275dp">

    <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_bus"
            android:id="@+id/type_image_info_window"
            android:contentDescription="@string/stop_type_content_description"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title_text_info_window"
            android:layout_marginTop="6dp"
            android:minWidth="200dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/type_image_info_window"
            android:textAlignment="center"
            android:layout_marginStart="4dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_text_info_window"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_info_window"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/type_image_info_window"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/title_text_info_window"
            android:id="@+id/lines_layout"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/number_text_info_window"
            app:layout_constraintHorizontal_bias="0.0">

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
