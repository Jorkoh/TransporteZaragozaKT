<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxWidth="300dp">

    <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/type_image_info_window"
            android:contentDescription="@string/stop_type_content_description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_text_info_window"
            android:layout_marginTop="6dp"
            android:maxWidth="240dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/type_image_info_window"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/lines_layout"
            android:textAlignment="center"
            android:layout_marginStart="4dp"
            />

    <GridLayout
            android:orientation="horizontal"
            android:columnCount="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@+id/title_text_info_window"
            android:id="@+id/lines_layout"
            android:gravity="start"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/number_text_info_window"
            android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_weight="1"
            >

    </GridLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_text_info_window"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toEndOf="@+id/lines_layout"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="0"/>


</androidx.constraintlayout.widget.ConstraintLayout>
