<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout"
              android:layout_width="match_parent"
              android:layout_height="350dp"
              android:padding="10dp"
              android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/layout_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1">

        <ImageView
                android:src="@drawable/ic_bus"
                android:id="@+id/image"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"/>

        <TextView
                style="@style/TextAppearance.Compat.Notification.Title"
                android:id="@+id/notification_destination_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image"
                android:gravity="center"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image"
                android:layout_below="@id/notification_destination_text">

            <TextView
                    style="@style/TextAppearance.Compat.Notification.Info"
                    android:id="@+id/notification_first_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

            <TextView
                    style="@style/TextAppearance.Compat.Notification.Info"
                    android:id="@+id/notification_second_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/layout_row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1">

        <ImageView
                android:src="@drawable/ic_tram"
                android:id="@+id/image2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"/>

        <TextView
                style="@style/TextAppearance.Compat.Notification.Title"
                android:id="@+id/notification_destination_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image2"
                android:gravity="center"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image2"
                android:layout_below="@id/notification_destination_text2">

            <TextView
                    style="@style/TextAppearance.Compat.Notification.Info"
                    android:id="@+id/notification_first_time_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

            <TextView
                    style="@style/TextAppearance.Compat.Notification.Info"
                    android:id="@+id/notification_second_time_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

